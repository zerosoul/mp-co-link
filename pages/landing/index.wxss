.entry {
  position: absolute;
  height: 100%;
  width: 100%;
}

.login-view {
  padding-top: 60px;
}

.login {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #056CF2;
  color: white;
  border-radius: 20px;
  width: 280px;
  height: 50px;
}

.login p {
  font-family: FZDeSaiHeiS;
  font-size: 18px;
  font-style: normal;
  font-weight: 400;
  line-height: 18px;
  letter-spacing: 0em;
  text-align: left;
}

.title {
  padding-top: 26px;
  display: flex;
  width: 100%;
  justify-content: center;
}

.title-icon {
  height: 23.75px;
  width: 23.75px;
  left: 3.75px;
  top: 3.75px;
  border-radius: 0px;
  padding-right: 18.5px;
}

.title p {
  font-family: Circular Std;
  font-size: 24px;
  font-style: normal;
  font-weight: 400;
  line-height: 24px;
  letter-spacing: 0.05em;
  text-align: left;
  color: #056CF2;
}

.middle {
  width: 100%;
  height: 469px;
  padding-top: 20px;
}

.middle-image {
  position: absolute;
  z-index: 111;
  width: 300px;
  height: 224px;
  top: 200px;
  left: 37px;
}

.middle-title {
  position: absolute;
  width: 200px;
  height: 28px;
  left: 88px;
  top: 160px;
  color: #056CF2;
  font-family: FZDeSaiHeiS;
  font-style: normal;
  font-weight: 500;
  font-size: 28px;
  line-height: 100%;
  /* identical to box height, or 28px */
  
  display: flex;
  align-items: center;
  letter-spacing: 0.02em;
}

.middle-bg-image {
  width: 100%;
  height: 100%;
}
