/* pages/history/index.wxss */

.card{
  margin:32rpx 66rpx;
  border-radius: 10rpx;
  background-color:#E6F0FF;
  padding:30rpx;
  display: flex;
  flex-direction: column;
}
.card .title{
  color:rgba(5, 108, 242, 1);
  margin-bottom:15rpx;
}
.card .desc{
  font-size: 28rpx;
}

.btns{
  color:#fff;
  width:100%;
  position:fixed;
  bottom:30rpx;
  display:flex;
  justify-content: space-between;
}
.btns .btn{
  width: fit-content;
  color:#fff;
  background:rgba(5, 108, 242, 1);
  border:none;
  outline: none;
  box-shadow: 0px 8rpx 20rpx #519CFF;
  border-radius: 40rpx;
}
.btns .btn.decline{
  background: red;
  box-shadow: 0px 8rpx 20rpx red;
}