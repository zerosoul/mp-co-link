/* pages/appointment/index.wxss */

.inputs{
  /* padding:10rpx 20rpx; */
}
.inputs .input{
  margin:32rpx 66rpx;
  border-radius: 10rpx;
  background-color:#E6F0FF;
  padding:30rpx;
  display: flex;
  flex-direction: column;
}
.inputs .input .title{
  color:rgba(5, 108, 242, 1);
  margin-bottom:15rpx;
}
.inputs .input .time{
  display:flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.inputs .input .time .prefix{
  font-size: 24rpx;
 color:#666;
}
.inputs .input .time .picker{
  padding:2rpx 10rpx;
  border-radius: 5rpx;
  border:1rpx solid #444;
  margin-right: 10rpx;
}
.inputs .input .addr{
  border:1rpx solid #999;
  padding:10rpx;
  width:100%;
}

.btns{
  color:#fff;
  width:100%;
  position:fixed;
  bottom:30rpx;
  display:flex;
  justify-content: space-between;
}
.btns .btn{
  width: fit-content;
  color:#fff;
  background:rgba(5, 108, 242, 1);
  border:none;
  outline: none;
  box-shadow: 0px 8rpx 20rpx #519CFF;
  border-radius: 40rpx;
}